<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroun2"

    android:layout_height="match_parent"
    tools:context="com.example.kidslearning.years.FourYears">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="horizontal"
            android:layout_height="144dp"
            android:weightSum="10"
            android:background="@drawable/button4"
            android:id="@+id/gk">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/knowledge"
                android:layout_weight="3"

                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  GenerAL\nkNOWLEDGE"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="7"
                android:fontFamily="@font/gibble"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="horizontal"
            android:layout_height="144dp"
            android:weightSum="10"
            android:background="@drawable/button1"
            android:id="@+id/epoems">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/poems2"
                android:layout_weight="3"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English\n  Poems"
                android:fontFamily="@font/gibble"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="7"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="horizontal"
            android:layout_height="144dp"
            android:weightSum="10"
            android:background="@drawable/button3"
            android:id="@+id/urpoems">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/poems1"
                android:layout_weight="3"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urdu Poems"
                android:fontFamily="@font/gibble"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="7"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
