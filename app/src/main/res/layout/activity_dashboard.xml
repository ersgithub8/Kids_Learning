<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroun2"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:fontFamily="@font/going"
                android:padding="20dp"
                android:textColor="#ff0000"
                android:text="Your Current Score is "
                android:id="@+id/tv1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv1"
                android:textSize="25dp"
                android:fontFamily="@font/going"
                android:padding="20dp"
                android:textColor="#ff0000"
                android:id="@+id/tv2"/>
         </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Select Age"
    android:fontFamily="@font/gibble"
    android:textColor="#ff0000"
    android:textStyle="bold"
    android:textAlignment="center"
    android:textSize="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25dp"
            android:fontFamily="@font/going"
            android:padding="20dp"
            android:textColor="#ff0000"
            android:id="@+id/tv3"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:layout_height="144dp"
        android:weightSum="10"
        android:background="@drawable/button4"
        android:id="@+id/years1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Year"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_weight="7"
            android:fontFamily="@font/gibble"
            android:textStyle="bold"
            android:textSize="40dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:layout_height="144dp"
        android:background="@drawable/button5"
        android:id="@+id/years2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Years"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:fontFamily="@font/gibble"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:layout_height="144dp"
        android:weightSum="10"
        android:background="@drawable/button1"
        android:id="@+id/years3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Years"
            android:textAlignment="center"
            android:fontFamily="@font/gibble"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:layout_weight="7"
            android:textStyle="bold"
            android:textSize="40dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:layout_height="144dp"
        android:weightSum="10"
        android:background="@drawable/button2"
        android:id="@+id/years4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Years"
            android:fontFamily="@font/gibble"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:layout_height="144dp"
        android:background="@drawable/button3"
        android:id="@+id/years5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 Years"
            android:fontFamily="@font/gibble"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40dp"/>
    </LinearLayout>
    </LinearLayout>

</ScrollView>