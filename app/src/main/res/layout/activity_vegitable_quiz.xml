<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg3"

    tools:context="com.example.kidslearning.twoyear.VegitableQuiz">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which one is broccoli?"
            android:id="@+id/tvveg"
            android:textSize="40dp"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#ff0000"
            android:fontFamily="@font/gibble"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:weightSum="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:id="@+id/vegimg1"
                android:src="@drawable/onion"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:id="@+id/vegimg2"
                android:src="@drawable/broccoli"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/vegimg3"
            android:src="@drawable/eggplant"
            />
    </LinearLayout>
</ScrollView>
