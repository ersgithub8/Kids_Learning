<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroun2"

    android:layout_height="match_parent"
    tools:context="com.example.kidslearning.years.Fiveyears">

    <LinearLayout
    android:layout_width="match_parent"
        android:layout_gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:layout_height="144dp"
        android:weightSum="10"
        android:background="@drawable/button4"
        android:id="@+id/maths">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/onetwothree"
            android:layout_weight="3"

            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maths BAsic\n   Concepts"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:layout_weight="7"
            android:fontFamily="@font/gibble"
            android:textStyle="bold"
            android:textSize="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:layout_height="144dp"
        android:weightSum="10"
        android:background="@drawable/button5"
        android:id="@+id/kaworld">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/knowledge"
            android:layout_weight="3"

            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Knowledge\nabout World"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:fontFamily="@font/gibble"
            android:layout_weight="7"
            android:textStyle="bold"
            android:textSize="30dp"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>
