<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroun2"

    android:layout_height="match_parent"
    tools:context="com.example.kidslearning.fouryear.EnglishPoems">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English Poems"
            android:fontFamily="@font/gibble"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:weightSum="10"
            android:background="@drawable/button2"
            android:id="@+id/pe1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button4"
                android:src="@drawable/babablack"
                android:layout_weight="8"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Baba baba black sheep"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:textAlignment="center"
                android:fontFamily="@font/gibble"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:weightSum="10"
            android:background="@drawable/button5"
            android:id="@+id/pe2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button5"
                android:src="@drawable/humptydumpty"
                android:layout_weight="8"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Humpty Dumpty"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:fontFamily="@font/gibble"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:weightSum="10"
            android:background="@drawable/button1"
            android:id="@+id/pe3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button1"
                android:src="@drawable/jack"
                android:layout_weight="8"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Jack and jill"
                android:fontFamily="@font/gibble"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:weightSum="10"
            android:background="@drawable/button2"
            android:id="@+id/pe4">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button2"
                android:src="@drawable/jhony"
                android:layout_weight="8"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Johny Johny"
                android:fontFamily="@font/gibble"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:weightSum="10"
            android:background="@drawable/button3"
            android:id="@+id/pe5">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button3"
                android:src="@drawable/twinkle"
                android:scaleType="fitXY"
                android:layout_weight="8"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Twinklw Twinkle Little star"
                android:fontFamily="@font/gibble"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
