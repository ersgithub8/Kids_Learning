<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroun2"

    android:layout_height="match_parent"
    tools:context="com.example.kidslearning.threeyear.UrduPoems">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Urdu Poems"
            android:fontFamily="@font/gibble"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:weightSum="10"
            android:background="@drawable/button4"
            android:id="@+id/p1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button4"
                android:src="@drawable/bulbul_ka_bacha"
                android:layout_weight="8"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="بلبل کا بچہ"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:fontFamily="@font/gibble"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:weightSum="10"
            android:visibility="gone"
            android:background="@drawable/button5"
            android:id="@+id/p2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button5"
                android:src="@drawable/machli_ka_bacha"
                android:layout_weight="8"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="مچھلی کا بچہ"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:fontFamily="@font/gibble"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:weightSum="10"
            android:visibility="gone"
            android:background="@drawable/button1"
            android:id="@+id/p3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button1"
                android:src="@drawable/bhalo_mia"
                android:layout_weight="8"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="بھالو میاں"
                android:fontFamily="@font/gibble"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:weightSum="10"
            android:visibility="gone"
            android:background="@drawable/button2"
            android:id="@+id/p4">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:background="@drawable/button2"
                android:src="@drawable/chu_chu"
                android:layout_weight="8"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="چُوچُو چا چا"
                android:textAlignment="center"
                android:fontFamily="@font/gibble"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:weightSum="10"
            android:background="@drawable/button3"
            android:id="@+id/p5">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:background="@drawable/button3"
                android:src="@drawable/abu_laye_motorcar"
                android:scaleType="fitXY"
                android:layout_weight="8"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="ابو لاۓ موٹر کار"
                android:fontFamily="@font/gibble"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
