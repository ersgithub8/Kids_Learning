<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroun2"
    tools:context="com.example.kidslearning.oneyear.ABC">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="horizontal"
            android:layout_height="144dp"
            android:weightSum="10"
            android:background="@drawable/button4"
            android:id="@+id/labc">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lesson"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 1"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="7"
                android:fontFamily="@font/gibble"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="horizontal"
            android:layout_height="144dp"
            android:weightSum="10"
            android:background="@drawable/button3"
            android:id="@+id/labc2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lesson"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 2"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="7"
                android:fontFamily="@font/gibble"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="horizontal"
            android:layout_height="144dp"
            android:weightSum="10"
            android:background="@drawable/button1"
            android:id="@+id/labc3">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lesson"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 3"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="7"
                android:fontFamily="@font/gibble"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="horizontal"
            android:layout_height="144dp"
            android:weightSum="10"
            android:background="@drawable/button2"
            android:id="@+id/aplha">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abc"
                android:layout_weight="3"

                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alphabets"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:fontFamily="@font/gibble"
                android:layout_weight="7"
                android:textStyle="bold"
                android:textSize="35dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:orientation="horizontal"
            android:layout_height="144dp"
            android:weightSum="10"
            android:background="@drawable/button5"
            android:id="@+id/qabc">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quiz"
                android:layout_weight="3"

                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Quiz"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:fontFamily="@font/gibble"
                android:layout_weight="7"
                android:textStyle="bold"
                android:textSize="40dp"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
